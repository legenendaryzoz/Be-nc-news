{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles,sorted by date in descending order without the body.",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https://example.com/image.jpg",
          "comment_count": 6

        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves a specific article based on the provided article_id",
    "queries": [],
    "exampleResponse": {
      "article": {
        "author": "weegembump",
        "title": "Seafood substitutions are increasing",
        "article_id": 1,
        "body": "Text from the article..",
        "topic": "cooking",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "article_img_url": "https://example.com/image.jpg"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments for the given article_id, sorted by date in descending order",
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "votes": 10,
          "created_at": "2023-08-27T15:59:13.341Z",
          "author": "johndoe",
          "body": "This is a comment.",
          "article_id": 1
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds a comment for the given article_id",
    "requestBody": {
      "username": "string",
      "body": "string"
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 2,
        "votes": 0,
        "created_at": "2023-08-27T16:00:00.000Z",
        "author": "butter_bridge",
        "body": "Great article!",
        "article_id": 1
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "Updates the votes of an article by its article_id",
    "requestBody": {
      "inc_votes": "Number of votes to add  or subtract"
    },
    "exampleRequestBody": {
      "inc_votes": 1
    },
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Sample Article",
        "body": "This is a sample article.",
        "votes": 101,
        "topic": "General",
        "author": "sample_author",
        "created_at": "2024-01-01T00:00:00.000Z"
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "Deletes the comment with the given comment_id",
    "params": {
      "comment_id": "ID of the comment to be deleted"
    },
    "exampleResponse": "No content"
  }
}
